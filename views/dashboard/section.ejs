<div class="container">
    <div class="row mt-4">
        <div class="col-md-4 text-center">
            <div class="form">
                <div class="form">
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Name" placeholder="Name" id="name">
                            <div class="float-left warning-name text-warning" style="display:none;">
                                <i class="fas fa-exclamation-circle"></i>
                                Please fill this field!
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="tel" class="form-control" name="Mobile" placeholder="Mobile number"
                                id="mobile">
                            <div class="float-left warning-mob text-warning" style="display:none;">
                                <i class="fas fa-exclamation-circle"></i>
                                Please fill this field!
                            </div>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="Category" placeholder="Category" id="category">
                                <option>Friend</option>
                                <option>Family</option>
                                <option>Office</option>
                                <option>Neighbour</option>
                                <option>Teacher</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn w-100 btn-primary" onclick="save()">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8 border-left">
            <h3 class="text-center">Yours contacts</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Mobile Number</th>
                        <th scope="col">Category</th>
                        <th scope="col" class="text-center">Edit</th>
                        <th scope="col" class="text-center">Remove</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                    <% for(let i=0;i<data.length;i++) {%>
                    <tr class="tbrow">
                        <td scope="row" class="srno"> <%=i+1%> </td>
                        <td><%= data[i].Name %></td>
                        <td><%= data[i].Mobile %></td>
                        <td><%= data[i].Category %></td>
                        <td class="text-center"> <a href="/edit"><i class="fas fa-pencil-alt"></i></a> </td>
                        <td class="text-center"> <a href="/remove"><i class="far fa-trash-alt"></i></a> </td>
                    </tr>
                    <% }%>
                </tbody>
            </table>
        </div>
    </div>
</div>